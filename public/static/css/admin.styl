body
	background-color #f5f6fa
	font-size 14px
	font-family 'Roboto', sans-serif
h2,h3,h4,h5,ul,body,html
	padding 0px
	margin 0px

a
	text-decoration none
	&:hover
		text-decoration none
.form-control
	&:focus
		box-shadow none
		outline none
.mtop16
	margin-top 16px
.mb16
	margin-bottom 16px
.mb32
	margin-bottom 32px
.wrapper
	min-height 100vh
	overflow hidden
	.col1
		float left
		position relative
		z-index 999
		width 17%
	.col2
		float left
		width 83%
.sidebar
	background-color #fff
	min-height 100vh
	.section-top
		background-color #2caaff
		box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
	.logo
		display block
		margin 0px auto
		padding-top 24px
		width 60%
	.user
		color #fff !important
		padding 16px
		a
			color #fff
			font-size 1.2em

	.main
		display block
		margin-top 8px
		ul
			li
				margin-bottom 4px
				a
					color #8998AC !important
					display block
					font-size 1.1em
					padding 12px 16px
					i
						margin-right 10px
					&:hover
						background-color #2caaff
						box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
						color #fff !important
						text-decoration none
				a.active
					background-color #2caaff
					box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
					color #fff !important
					text-decoration none
.navbar
	background-color #2caaff
	a
		color #fff !important
	.dropdown
		margin-right 13px
		width 200px
		a.btn-secondary
			background-color #2caaff
			border none
			.user-image
				float left
				height 25px
				width 25px
				border-radius 50%
				margin-right 10px
				margin-top -2px
			&:hover
				background-color #2584c3
		ul.dropdown-menu
			border-top-right-radius 0
			border-top-left-radius 0
			padding 1px 0 0 0
			border-top-width 0
			width 280px
			right 0
			left auto
			li.user-header
				background-color #2caaff
				height 175px
				padding 10px
				text-align center
				img
					z-index 5
					height 90px
					width 90px
					border 3px solid #2caaff
					border-radius 50%
				p
					color rgba(255, 255, 255, 0.8)
					font-size 17px
					margin-top 10px
			li.user-footer
				background-color #f9f9f9
				padding 34px
				margin-bottom 17px
					


.page
	padding-top 16px
	padding-bottom 16px
	.breadcrumb
		background-color #fff
		box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.10) !important
		.breadcrumb-item
			a
				&:hover
					text-decoration none !important
	.panel
		background-color #fff
		border-radius 6px
		border-bottom 2px solid #2caaff
		width 100%
		.header
			border-bottom 1px solid #e8e8e8
			h2.title
				display inline-block
				color #19213d
				font-size 1.1em
				padding 12px 16px
			ul
				display inline-block
				float right
				margin-right 12px
				li
					display inline-block
					position relative
					a
						color #333
						display inline-block
						padding 10px
						&:hover
							background-color #f6f6f6
							color #222
							text-decoration none
						i
							color #2caaff
					ul
						background-color #fff
						border 1px solid #f0f0f0
						display none	
						float none
						position absolute
						right -16px
						width 200px
						li
							display inline-block
							border-bottom 1px solid #f0f0f0
							width 100%
							&:last-child
								border-bottom 0px 
							a
								display block
								width 100%
					&:hover
						ul
							display block
							
		.inside
			padding 16px 
			.nav
				.nav-link
					border 1px solid #2caaff
					margin-right 8px
					&:hover
						background-color #2caaff
						color #fff
			.form_search
				display none
				margin-bottom 16px
				.btn
					width 100%
			.big_count
				display block
				font-size 2em
				text-align center
				width 100%
.opts
	a
		border-radius 4px
		border 1px solid #f0f0f0
		display inline-block
		padding 8px 12px

.product_gallery
	overflow hidden
	.btn-submit
		display block
		
		margin-right 1%
		width 100%
		a
			border 1px dashed #6666
			border-radius 4px
			color #333
			display block
			font-size 1.5em
			text-align center
			padding 12px
			width 100%
			&:hover
				background-color #2caaff
				color #fff
	.tumbs
		overflow hidden
		.tumb
			float left
			margin-top 16px
			position relative
			width 48%
			a
				background-color rgba(0,0,0, .5)
				border-radius 50px
				color #fff
				display inline-block
				padding 6px 10px
				position absolute
				bottom 8px
				right 8px
			img
				border-radius 4px
				width 100%
			&:nth:child(odd)
				margin-right 4%

.page_user
	.mini_profile
		.avatar
			border-radius 50%
			display block
			margin 0px auto
		.info
			background-color #fff
			span
				display block
				font-size 1em
				width 101%
			span.title
				font-weight bold
				margin-top 16px
			width 150px
		.btn
			width 100%
			margin-top 16px
